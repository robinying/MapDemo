<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.robin.commonUi.customview.actionbar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:tb_titleText="地图使用"
            app:tb_useThemeColor="true" />

        <com.robin.commonUi.customview.textview.DPTextView
            android:id="@+id/tv_amap"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:alpha=".9"
            android:gravity="center"
            android:padding="4dp"
            android:text="高德地图"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            app:backgroundColor="@color/colorAccent"
            app:corner_radius="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_bar" />

        <com.robin.commonUi.customview.textview.DPTextView
            android:id="@+id/tv_baidu"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:alpha=".9"
            android:gravity="center"
            android:padding="4dp"
            android:text="百度地图"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            app:backgroundColor="@color/colorAccent"
            app:corner_radius="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_amap" />

        <TextView
            android:id="@+id/tv_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="4dp"
            android:text="Test round"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_baidu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>